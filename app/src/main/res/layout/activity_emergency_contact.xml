<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.team3.ergency.EmergencyContact">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ec_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/primary_view_margin"
            android:ems="10"
            android:hint="Contact Full Name*"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/ec_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/primary_view_margin"
            android:ems="10"
            android:hint="Address*"
            android:inputType="textCapWords" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ec_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="City*"
                android:inputType="textCapWords" />

            <AutoCompleteTextView
                android:id="@+id/ec_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:hint="State*"
                android:inputType="textCapCharacters"/>

        </LinearLayout>

        <EditText
            android:id="@+id/ec_zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/primary_view_margin"
            android:ems="10"
            android:hint="Zip Code*"
            android:inputType="number" />

        <EditText
            android:id="@+id/ec_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/primary_view_margin"
            android:ems="10"
            android:hint="Phone Number*"
            android:inputType="phone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primary_view_margin"
            android:layout_marginLeft="@dimen/primary_view_margin"
            android:layout_marginRight="@dimen/primary_view_margin"
            android:layout_marginTop="@dimen/primary_view_margin"
            android:onClick="saveInfo"
            android:text="Continue"
            android:theme="@style/AppTheme.Button" />
    </LinearLayout>

</ScrollView>
